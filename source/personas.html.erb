---
title: Персоналии
---

<div class="row">
  <div class="large-12 columns">
    <h2 class="app_title app_gray">Персоналии</h2>
    <hr />
  </div>
</div>

<% data.personas.groups.each do |group|%>
    <div class="row">
      <% group.each do |file| %>
          <div class="large-4 columns">
            <div class="panel app_thes">
              <a href="<%= file[:link] %>">
                <%= image_tag "/img/personas/#{file[:title].parameterize}.png", :class => 'app_photo' %>
              </a>
              <h3 class="app_thin"><a href="<%= file[:link] %>"><%= file[:title] %></a></h3>
              <p><a href="<%= file[:link] %>" class="app_black"><%= file[:first_line] %></a></p>
            </div>
          </div>
      <% end %>
    </div>
<% end %>
